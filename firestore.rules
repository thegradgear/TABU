rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection Rules
    // 1. Allow any authenticated user to read user data (for union-members page).
    // 2. Allow a user to create and update only their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // Payments Collection Rules
    // 1. Allow a user to create a payment document for themselves.
    // 2. Allow a user to read only their own payment documents.
    match /payments/{paymentId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId;
    }
  }
}
