
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read all other user profiles
      allow read: if request.auth != null;
      // Allow users to create their own profile and update it
      allow create, update: if request.auth.uid == userId;
    }

    match /payments/{paymentId} {
      // Allow users to read and create their own payment documents
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
